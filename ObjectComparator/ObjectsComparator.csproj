<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>net6.0;netstandard2.1</TargetFrameworks>
    <Nullable>enable</Nullable>
    <LangVersion>latest</LangVersion>

    <PackageId>ObjectComparator</PackageId>
    <Version>3.6.3</Version>
    <AssemblyVersion>3.6.0.0</AssemblyVersion>
    <FileVersion>3.6.3.0</FileVersion>

    <Authors>Valerii Fedorenko</Authors>
    <Copyright>Copyright (c) 2022-2025 Valerii Fedorenko</Copyright>
    <PackageProjectUrl>https://github.com/valeraf23/ObjectComparator</PackageProjectUrl>
    <RepositoryUrl>https://github.com/valeraf23/ObjectComparator</RepositoryUrl>
    <RepositoryType>git</RepositoryType>
    <PublishRepositoryUrl>true</PublishRepositoryUrl>

    <PackageIcon>icon.png</PackageIcon>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageLicenseFile>LICENSE</PackageLicenseFile>
    <IncludeSymbols>true</IncludeSymbols>
    <SymbolPackageFormat>snupkg</SymbolPackageFormat>

    <Description>High-performance deep object comparison for .NET with customizable rules and strategy skipping.</Description>
    <PackageTags>ObjectComparison;DeepComparison;Equality;Diff;Reflection</PackageTags>

    <PackageReleaseNotes>Added ComparatorOptions.SkipStrategies(...) factory helper.
Comparator now respects skipped strategies (Equality, OverridesEquals, CompareTo).
Improved null handling and type mismatch detection.
⚠️ Breaking: ComparatorOptions.Create(...) renamed to SkipStrategies(...).</PackageReleaseNotes>
  </PropertyGroup>

  <ItemGroup>
    <None Include="..\icon.png">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\LICENSE">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
    <None Include="..\README.md">
      <Pack>true</Pack>
      <PackagePath>\</PackagePath>
    </None>
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.CSharp" Version="4.7.0" />
    <PackageReference Include="Newtonsoft.Json" Version="13.0.1" />
    <PackageReference Include="Microsoft.SourceLink.GitHub" Version="8.0.0" PrivateAssets="All" />
  </ItemGroup>

  <ItemGroup>
    <AssemblyAttribute Include="System.Runtime.CompilerServices.InternalsVisibleTo">
      <_Parameter1>ObjectsComparator.Tests</_Parameter1>
    </AssemblyAttribute>
  </ItemGroup>

</Project>
